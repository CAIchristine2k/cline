{
  "name": "cline-shopify",
  "private": true,
  "sideEffects": false,
  "version": "2025.5.1",
  "type": "module",
  "scripts": {
    "build": "npm run codegen && react-router build && node scripts/clean-build.js",
    "dev": "react-router dev",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && npx wrangler deploy",
    "deploy:secrets": "npx wrangler secret bulk .env",
    "deploy:full": "npm run build && npm run deploy:secrets && npx wrangler deploy",
    "deploy:check": "node .wrangler-check.js",
    "cf-login": "npx wrangler login",
    "cf-whoami": "npx wrangler whoami",
    "cf-tail": "npx wrangler tail",
    "cf-typegen": "wrangler types && mv worker-configuration.d.ts types/worker-configuration.d.ts",
    "lint": "eslint --no-error-on-unmatched-pattern --config ./config/eslint.config.js .",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc --noEmit",
    "codegen": "shopify hydrogen codegen",
    "codegen:graphql-schema": "graphql-codegen --config graphql-schema/codegen.ts",
    "codegen:schema": "graphql-codegen --config docs/graphql-schema/codegen.ts",
    "clean": "rm -rf dist build .wrangler .react-router"
  },
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.3.0",
    "@cloudinary/react": "^1.14.3",
    "@cloudinary/url-gen": "^1.21.0",
    "@shopify/hydrogen": "2025.5.0",
    "@shopify/hydrogen-react": "^2025.5.0",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.12.2",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^5.1.22",
    "konva": "^9.3.20",
    "lucide-react": "^0.511.0",
    "mimetext": "^3.0.27",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-konva": "^18.2.7",
    "react-router": "7.6.0",
    "react-router-dom": "7.6.0",
    "resend": "^4.5.1",
    "tailwindcss": "^4.1.6",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@react-router/dev": "7.6.0",
    "@react-router/fs-routes": "7.6.0",
    "@shopify/cli": "~3.80.4",
    "@shopify/hydrogen-codegen": "^0.3.3",
    "@shopify/mini-oxygen": "^3.2.1",
    "@shopify/oxygen-workers-types": "^4.1.6",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/vite": "^4.1.6",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^9.6.1",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "add": "^2.0.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "^5.2.2",
    "vite": "^6.2.4",
    "vite-tsconfig-paths": "^4.3.1",
    "wrangler": "^4.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults"
  ]
}
